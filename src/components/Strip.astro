---
const { strip } = Astro.props
---

<section class="strip" id="about">
  <div class="strip__container">
    <p class="hidden hidden__left">{strip.text}</p>
    <a
      class="btn btn--white hidden hidden__right"
      href={strip.btnLink}
      target="_blank"
      rel="noopener"
      aria-label={strip.btnText}>{strip.btnText}</a
    >
  </div>
</section>

<style lang="scss">
  .strip {
    background-color: #011627;
    padding: 4rem 2rem;
    overflow: hidden;
    @media (max-width: 700px) {
      padding: 4rem 1rem;
    }

    &__container {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 6rem;
      @media (max-width: 900px) {
        flex-direction: column;
        gap: 4rem;
      }
    }
    p {
      max-width: 900px;
      @media (max-width: 900px) {
        text-align: center;
      }
    }
  }
</style>
