<section class="contact" id="contact">
  <div class="contact__container">
    <div class="contact__header">
      <h2 class="hidden hidden__left">CONTACT</h2>
      <a
        class="btn hidden hidden__right"
        href="mailto:hello@aaronduke.co.uk"
        aria-label="Email Me">EMAIL</a
      >
    </div>

    <form method="POST" class="form" data-netlify="true" name="Contact Form">
      <input
        aria-label="Name"
        type="text"
        placeholder="NAME"
        autocomplete="name"
        name="name"
        class="hidden hidden__left"
      />

      <input
        aria-label="Email"
        type="email"
        placeholder="EMAIL ADDRESS"
        name="email"
        autocomplete="email"
        class="hidden hidden__left"
      />

      <textarea
        class="hidden hidden__left"
        aria-label="Message"
        name="message"
        placeholder="MESSAGE"
        rows="6"></textarea>

      <button
        aria-label="Submit Form"
        type="submit"
        class="form__submit hidden hidden__right">Send</button
      >
    </form>
  </div>

  <style lang="scss">
    .contact {
      padding: 4rem 2rem;

      &__container {
        max-width: 1200px;
        margin: 0 auto;
      }

      &__header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
      }
    }
    .form {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      border-radius: 0.25rem;

      input,
      textarea {
        padding: 0.75rem 1rem;
        font-size: 0.85rem;
        letter-spacing: 1px;
        margin-bottom: 0.5rem;
        width: 100%;
        color: #011627;
        resize: none;
        border: 1px solid #011627;
        border-radius: 0.25rem;
        &:focus {
          outline: none;
          background-color: #011627;
          color: #fff;
          &::placeholder {
            color: #fff;
          }
        }

        &::placeholder {
          color: #011627;
        }
      }
      &__submit {
        display: inline-block;
        text-transform: uppercase;
        text-decoration: none;
        font-size: 1.25rem;
        font-weight: 700;
        letter-spacing: 2px;
        color: #fff;
        background: #011627;
        padding: 1rem 2rem;
        border-radius: 0.25rem;
        transition: all 0.3s ease-in-out;
        border: 1px solid #011627;
        cursor: pointer;
        &:hover {
          background: #fff;
          color: #011627;
          border: 1px solid #011627;
        }
      }
    }
  </style>
</section>
