<script>
  const checkbox = document.querySelector('[data-checkbox="inquiry"]')
  const checkboxToggle = document.querySelector(
    '[data-checkbox-toggle="inquiry"]'
  )
  const inquiryDetails = document.querySelector('[data-inquiry-details=""]')

  const phoneInput = document.querySelector('[name="phone"]')
  const projectTypeInput = document.querySelector('[name="project_type"]')

  const budgetSlider = document.querySelector('[data-budget-slider=""]')
  const budgetValue = document.querySelector('[data-budget-value=""]')

  checkboxToggle.addEventListener("click", () => {
    if (checkbox.classList.contains("checked")) {
      checkbox.classList.remove("checked")
      inquiryDetails.classList.remove("show")
      phoneInput.tabIndex = -1
      projectTypeInput.tabIndex = -1
      budgetSlider.tabIndex = -1
    } else {
      checkbox.classList.add("checked")
      inquiryDetails.classList.add("show")
      phoneInput.tabIndex = 0
      projectTypeInput.tabIndex = 0
      budgetSlider.tabIndex = 0
    }
  })

  checkboxToggle.addEventListener("keydown", (e) => {
    if (e.key === "Enter") {
      if (checkbox.classList.contains("checked")) {
        checkbox.classList.remove("checked")
        inquiryDetails.classList.remove("show")
        phoneInput.tabIndex = -1
        projectTypeInput.tabIndex = -1
        budgetSlider.tabIndex = -1
      } else {
        checkbox.classList.add("checked")
        inquiryDetails.classList.add("show")
        phoneInput.tabIndex = 0
        projectTypeInput.tabIndex = 0
        budgetSlider.tabIndex = 0
      }
    }
  })

  budgetSlider.addEventListener("input", () => {
    budgetValue.innerHTML = budgetSlider.value
  })
</script>

<section class="contact" id="contact">
  <div class="contact__container">
    <div class="contact__header">
      <h2 class="hidden hidden__left">CONTACT</h2>
      <a
        class="btn hidden hidden__right"
        href="mailto:hello@aaronduke.co.uk"
        aria-label="Email Me">EMAIL ME</a
      >
    </div>

    <form
      method="post"
      class="form"
      data-netlify="true"
      data-netlify-recaptcha="true"
      name="contact"
    >
      <div class="form__container">
        <input
          aria-label="Name"
          type="text"
          placeholder="NAME"
          autocomplete="name"
          name="name"
          class="hidden hidden__left"
          required
        />

        <input
          aria-label="Email"
          type="email"
          placeholder="EMAIL ADDRESS"
          name="email"
          autocomplete="email"
          class="hidden hidden__left"
          required
        />

        <!-- Checkbox -->
        <div
          class="form__inquiry hidden hidden__left"
          data-checkbox-toggle="inquiry"
          tabindex="0"
        >
          <span
            class="form__checkbox"
            data-checkbox="inquiry"
            data-checked="true"></span>
          <span>INQUIRY</span>
        </div>

        <!-- Dropdown -->
        <div class="form__inquiry-details" data-inquiry-details="">
          <div class="form__inquiry-wrapper">
            <div class="form__budget">
              <p>Budget</p>
              <div>
                <input
                  tabindex="-1"
                  aria-label="Budget Slider"
                  type="range"
                  name="budget_slider"
                  min="1"
                  max="20"
                  step="1"
                  value="10"
                  data-budget-slider=""
                />

                <p>Â£ <span data-budget-value="">10</span>K</p>
              </div>
            </div>

            <input
              tabindex="-1"
              aria-label="Project Type"
              type="text"
              name="project_type"
              placeholder="PROJECT TYPE (E.G. WEBSITE, MOBILE APP)"
            />

            <input
              tabindex="-1"
              aria-label="Phone Number"
              type="tel"
              name="phone"
              autocomplete="tel"
              placeholder="PHONE NUMBER"
            />
          </div>
        </div>
      </div>

      <textarea
        class="hidden hidden__left"
        aria-label="Message"
        name="message"
        placeholder="MESSAGE"
        rows="6"
        required></textarea>

      <div class="form__button-container">
        <button
          aria-label="Submit Form"
          type="submit"
          value="Send"
          class="form__submit hidden hidden__right">Send</button
        >
      </div>
    </form>
  </div>
</section>

